<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ImageSearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flickr Image Search"
        android:textSize="17sp"
        android:textColor="@color/primary_dark_grey"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="4dp"
        android:orientation="horizontal"
        android:background="@drawable/background_search_box">

        <EditText
            android:id="@+id/activity_image_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:background="@null"
            android:textColor="@color/primary_dark_grey"
            android:fontFamily="sans-serif-medium"
            android:inputType="textEmailAddress"
            android:hint="Search Flickr" />

        <ImageButton
            android:id="@+id/activity_image_search_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_search"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:tint="@color/primary_dark_grey"
            android:padding="10dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_image_search_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>